# Variables de entorno para desarrollo local

# Configuración de PostgreSQL
# IMPORTANTE: Debes tener PostgreSQL instalado y en ejecución

# Opción 1: Parámetros individuales (recomendado para desarrollo)
DB_HOST=localhost
DB_USER=postgres        # Usuario por defecto, cambia si usas uno diferente
DB_PASSWORD=postgres    # Contraseña (¡asegúrate de cambiarla!)
DB_NAME=marketplace     # Nombre de la base de datos que se creará
DB_PORT=5432            # Puerto por defecto de PostgreSQL

# Opción 2: URL completa (alternativa)
# DATABASE_URL=postgres://usuario:contraseña@localhost:5432/marketplace

# Variables de aplicación
PORT=5000               # Puerto donde se ejecutará el servidor
JWT_SECRET=CambiaEstePorUnSecretoSeguro123  # Importante cambiar en producción!
NODE_ENV=development    # Entorno (development, production, testing)

# Configuración de cookies
COOKIE_SECURE=false     # Usa 'true' en producción con HTTPS
COOKIE_SAME_SITE=strict # Protección contra CSRF
